<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- styles for activity_main -->

    <style name="MainActivityLayoutColorStyle">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/main_screen_buttons_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="cornerRadius">@dimen/main_screen_buttons_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- styles for activity_settings -->

    <style name="SettingsActivityLayoutColorStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsActivityTitleColorStyle">
        <item name="android:background">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SettingsActivityBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_bars_height</item>
        <item name="android:layout_marginTop">@dimen/settings_bars_margin</item>

        <item name="android:background">@color/white</item>

        <item name="android:paddingLeft">@dimen/settings_bars_padding_left</item>
        <item name="android:paddingRight">@dimen/settings_bars_padding_right</item>
    </style>

    <style name="SettingsActivityBarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/settings_titles_height</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsActivityBarIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <!-- styles for activity_search -->

    <style name="SearchActivityLayoutColorStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchActivityTitleColorStyle">
        <item name="android:background">@color/white</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="SearchActivityBarColorStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SearchActivityEditTextStyle">
        <item name="android:drawableTint">@color/grey</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- styles for track_view -->

    <style name="TrackViewFirstLineStyle">
        <item name="android:textColor">@color/track_view_first_line_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/trackview_first_line_textsize</item>
    </style>

    <style name="TrackViewSecondLineStyle">
        <item name="android:textColor">@color/track_view_second_line_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/trackview_second_line_textsize</item>
    </style>

    <!-- styles for activity_audiopleer -->

    <style name="TrackInfoTitlesTextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/titles_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/track_info_size</item>
    </style>

    <style name="TrackInfoValuesTextViewStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:textColor">@color/values_color</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:layout_marginBottom">@dimen/track_info_values_margin</item>
        <item name="android:textSize">@dimen/track_info_size</item>
    </style>

    <style name="TrackValuesTextViewStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/values_color</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SmallButtonsStyle">
        <item name="android:layout_width">@dimen/small_buttons_width</item>
        <item name="android:layout_height">@dimen/small_buttons_height</item>
        <item name="android:background">@null</item>
    </style>
</resources>

