<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/favorite_tracks_fragment_background_color"
    tools:context=".media.ui.FavoriteTracksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"

        android:orientation="vertical">

        <ImageView
            android:id="@+id/messagePlaceHolder"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="118dp"

            android:src="@drawable/placeholder_nothing"
            android:visibility="gone"

            tools:src="@drawable/placeholder_nothing"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/message"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"

            android:fontFamily="@font/ys_display_medium"
            android:gravity="center_horizontal"

            android:text="@string/favorite_tracks_fragment_empty_message"
            android:textColor="@color/message_color"
            android:textFontWeight="400"

            android:textSize="19sp"
            android:visibility="gone"

            tools:text="@string/favorite_tracks_fragment_empty_message"
            tools:visibility="visible" />
    </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/trackList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/tracklst_marginleft"
        android:layout_marginTop="@dimen/tracklst_margintop"
        android:layout_marginRight="@dimen/tracklst_marginright" />





</FrameLayout>