<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="@string/app_name"
            android:textColor="@color/white"
            android:textSize="@dimen/main_screen_text_size" />

        <Button
            android:id="@+id/button_search"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginTop="40dp"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/search_button_text"

            android:textColor="@color/black"


            android:textSize="@dimen/main_screen_text_size"
            app:cornerRadius="@dimen/main_screen_buttons_radius"

            app:icon="@drawable/ic_search"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            />

        <Button
            android:id="@+id/button_media"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginTop="@dimen/main_screen_buttons_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/media_button_text"

            android:textColor="@color/black"


            android:textSize="@dimen/main_screen_text_size"
            app:cornerRadius="@dimen/main_screen_buttons_radius"

            app:icon="@drawable/ic_media"
            app:iconGravity="textStart"
            app:iconTint="@color/black"

            />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_marginTop="@dimen/main_screen_buttons_margin"
            android:layout_weight="1"
            android:backgroundTint="@color/white"
            android:text="@string/settings_button_text"

            android:textColor="@color/black"

            android:textSize="@dimen/main_screen_text_size"
            app:cornerRadius="@dimen/main_screen_buttons_radius"

            app:icon="@drawable/ic_settings"
            app:iconGravity="textStart"
            app:iconTint="@color/black"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>