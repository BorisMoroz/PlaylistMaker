<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/trackview_height"

    android:background="@color/track_view_background_color"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image"

        android:layout_width="@dimen/trackview_image_width"
        android:layout_height="@dimen/trackview_image_height"

        android:layout_gravity="center_vertical"

        tools:background="@drawable/edittext_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"

        android:layout_marginLeft="@dimen/trackview_lines_block_marginleft"

        android:layout_weight="1"

        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"

            android:singleLine="true"

            android:textColor="@color/track_view_first_line_color"
            android:textFontWeight="400"

            android:textSize="@dimen/trackview_first_line_textsize"
            tools:text="@string/track_view_first_line_test_title" />

        <TextView
            android:id="@+id/artistName"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:fontFamily="@font/ys_display_regular"
            android:maxLines="1"

            android:singleLine="true"

            android:textColor="@color/track_view_second_line_color"
            android:textFontWeight="400"
            android:textSize="@dimen/trackview_second_line_textsize"
            tools:text="@string/track_view_second_line_test_title" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical"

        android:layout_marginLeft="@dimen/trackview_arrowforward_marginleft"

        android:src="@drawable/ic_arrowforward"
        app:tint="@color/track_view_icon_color" />

</LinearLayout>