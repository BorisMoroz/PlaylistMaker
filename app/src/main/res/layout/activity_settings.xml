<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/button_back"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginLeft="16dp"

                android:layout_gravity="center_vertical"

                android:src="@drawable/ic_arrowback" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"

                android:layout_marginLeft="66dp"
                android:text="@string/settings_screen_title"
                android:textColor="@color/black"
                android:textSize="22sp"
                />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bars_height"
            android:layout_marginTop="24dp"

            android:paddingLeft="@dimen/settings_bars_padding_left"
            android:paddingRight="6dp"

            android:background="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"


                android:text="@string/settings_theme_title"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_titles_height"
                />

            <Switch
                android:layout_width="@dimen/settings_switch_width"
                android:layout_height="@dimen/settings_switch_height"

                android:layout_gravity="end|center_vertical" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bars_height"
            android:layout_marginTop="@dimen/settings_bars_margin"
            android:background="@color/white"
            android:paddingLeft="@dimen/settings_bars_padding_left"
            android:paddingRight="@dimen/settings_bars_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:text="@string/settings_share_title"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_titles_height" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="end|center_vertical"

                android:src="@drawable/ic_share" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bars_height"
            android:layout_marginTop="@dimen/settings_bars_margin"
            android:background="@color/white"
            android:paddingLeft="@dimen/settings_bars_padding_left"
            android:paddingRight="@dimen/settings_bars_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:text="@string/settings_support_title"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_titles_height" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="end|center_vertical"

                android:src="@drawable/ic_support" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/settings_bars_height"
            android:layout_marginTop="@dimen/settings_bars_margin"
            android:background="@color/white"
            android:paddingLeft="@dimen/settings_bars_padding_left"
            android:paddingRight="@dimen/settings_bars_padding_right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_vertical"
                android:text="@string/settings_user_title"
                android:textColor="@color/black"
                android:textSize="@dimen/settings_titles_height" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="end|center_vertical"

                android:src="@drawable/ic_arrowforward" />
        </FrameLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>