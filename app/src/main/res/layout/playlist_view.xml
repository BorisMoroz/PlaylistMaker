<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/playlistview_width"
    android:layout_height="@dimen/playlistview_height"

    android:background="@color/playlist_view_background_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image"

        android:layout_width="@dimen/playlistview_image_width"
        android:layout_height="@dimen/playlistview_image_height"

        tools:background="@drawable/edittext_bg" />

    <TextView
        android:id="@+id/playlistName"

        style="@style/PlaylistViewLineStyle"

        android:layout_marginTop="4dp"

        tools:text="@string/playlist_title_check_value" />

    <TextView
        android:id="@+id/playlistTracksNum"

        style="@style/PlaylistViewLineStyle"

        tools:text="@string/playlist_tracksnumber_check_value" />

</LinearLayout>