<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- styles for activity_main -->

    <style name="MainActivityLayoutColorStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="MainActivityButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginTop">@dimen/main_screen_buttons_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_screen_text_size</item>
        <item name="cornerRadius">@dimen/main_screen_buttons_radius</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>

        <item name="android:textAllCaps">false</item>

        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- styles for activity_settings -->

    <style name="SettingsActivityLayoutColorStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SettingsActivityTitleColorStyle">
        <item name="android:background">@color/black</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SettingsActivityBarStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/settings_bars_height</item>
        <item name="android:layout_marginTop">@dimen/settings_bars_margin</item>

        <item name="android:background">@color/black</item>

        <item name="android:paddingLeft">@dimen/settings_bars_padding_left</item>
        <item name="android:paddingRight">@dimen/settings_bars_padding_right</item>
    </style>

    <style name="SettingsActivityBarTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/settings_titles_height</item>

        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
    </style>

    <style name="SettingsActivityBarIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>

    <!-- styles for activity_search -->

    <style name="SearchActivityLayoutColorStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SearchActivityTitleColorStyle">
        <item name="android:background">@color/black</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="SearchActivityBarColorStyle">
        <item name="android:background">@color/black</item>
    </style>

    <style name="SearchActivityEditTextColorStyle">
        <item name="android:drawableTint">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- styles for track_view -->

    <style name="TrackViewColorStyle">
        <item name="android:background">@color/black</item>
    </style>

</resources>